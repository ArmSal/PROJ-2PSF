{{ form_start(form) }}
    <div class="card mb-4">
        <div class="card-body">
            <div class="mb-3">
                {{ form_label(form.titre, 'Titre') }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titre) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.contenu, 'Contenu') }}
                {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': 6}}) }}
                {{ form_errors(form.contenu) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.imageFile, 'Charger l\'image (optionnel)') }}
                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.imageFile) }}
            </div>
            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-success btn-sm">
                    <i class="bi bi-save me-1"></i> Sauvegarder
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}
