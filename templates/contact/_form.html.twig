<div class="row align-items-center">
    <div class="col-md-6 ">
        <img src="{{ asset('img/contact.jpg') }}" alt="Contact Image" class="img-fluid rounded">
    </div>

    <div class="col-md-6">
        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="mb-3">
                {{ form_label(form.nom, 'Nom') }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.email, 'Email') }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.sujet, 'Sujet') }}
                {{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.sujet) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.message, 'Message') }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                {{ form_errors(form.message) }}
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        {{ form_end(form) }}
    </div>
</div>
